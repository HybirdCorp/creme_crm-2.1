{% comment %} {% load creme_core_tags %} {% endcomment %}
{% comment %}{% load reports_tags %}{% endcomment %}
{
    "title": {
        "text":       "<b>{{rgraph}}</b>",
        "textColor":  "black",
        "fontSize":   {% if is_small %}"12pt"{% else %}"13pt"{% endif %},
        "renderer":   "jqplot.DivTitleRenderer"
    },
    "seriesDefaults": {
        "shadow": false,
        "renderer": "jqplot.BarRenderer", 
        "rendererOptions": {
            "showDataLabels": true,
            "fillToZero": true,
            "varyBarColor": true
        }
    },
    "grid": {
        "drawGridlines": true,
        "shadow": false,
        "background": "#ffffff",
        "drawBorder": false
    },
    "axes": {
        "xaxis": {
            "renderer": "jqplot.CategoryAxisRenderer",
            "ticks": [],
            {% if is_small %}
            "tickRenderer": "jqplot.CanvasAxisTickRenderer",
            "tickOptions": {
                "angle": -30,
                "fontSize": "9pt",
                "textColor":  "black"
            },
            {% else %}
            "tickRenderer": "jqplot.AxisTickRenderer",
            "tickOptions": {
                "textColor":  "black",
                "fontSize":   "9pt"
            },
            {% endif %}
            {% comment %}"label": "{{report|verbose_abscissa:report.abscissa}}{% if report.type %} - {{verbose_report_graph_types|get_value:report.type}}{% if report.days %} ({{report.days}}){% endif %}{% endif %}",{% endcomment %}
            "label": "{{rgraph.hand.verbose_abscissa}}{% if rgraph.type %} - {{rgraph.hand.verbose_name}}{% if rgraph.days %} ({{rgraph.days}}){% endif %}{% endif %}",
            "labelOptions": {
                "fontWeight": "bold",
                "fontSize":   "10pt",
                "textColor":  "black"
                {% if plotXAxisAngle and not is_small %}
                "angle": {{plotXAxisAngle}},
                {% endif %}
            },
            "labelRenderer": "jqplot.CanvasAxisLabelRenderer"
        },
        "yaxis": {
            "tickRenderer": "jqplot.CanvasAxisTickRenderer",
            "tickOptions": {
                "formatString": {% if rgraph.is_count %}"%d"{% else %}"%d"{% endif %},
                "textColor":  "black",
                "fontSize":   "9pt"
            },
            {% comment %}"label": "{{rgraph|verbose_ordinate:rgraph.ordinate}}",{% endcomment %}
            "label": "{{rgraph.hand.verbose_ordinate}}",
            "labelOptions": {
                "fontWeight": "bold",
                "fontSize":   "10pt",
                "textColor":  "black"
            },
            "labelRenderer": "jqplot.CanvasAxisLabelRenderer"
        }
    },
    "highlighter": {
        "show": true,
        "showMarker": false,
        "tooltipAxes": "y",
        "formatString": "%s",
        "tooltipLocation": "n",
        "cursorStyle": "pointer"
    },
    "handlers": [
        {"action": "redirect", "event": "click", "url": "%2$s"}
    ],
    "dataFormat": "creme.graphael.BargraphData",
    "dataDefaults": [[["", 0.0]]]
}